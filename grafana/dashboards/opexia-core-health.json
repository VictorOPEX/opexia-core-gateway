  "panels": [
    {
      "id": 1,
      "title": "Piezas por minuto",
      "type": "timeseries",
      "datasource": {
        "type": "influxdb",
        "uid": "opexiaInflux"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"OPEXIA\")\n  |> range(start: -15m)\n  |> filter(fn: (r) => r._measurement == \"piece_count\" and r._field == \"value\")\n  |> aggregateWindow(every: 1m, fn: sum, createEmpty: false)\n  |> yield(name: \"sum\")",
          "queryType": "flux"
        }
      ]
    },
    {
      "id": 2,
      "title": "Total acumulado (\u00faltimas 24h)",
      "type": "stat",
      "datasource": {
        "type": "influxdb",
        "uid": "opexiaInflux"
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 500
              },
              {
                "color": "red",
                "value": 1000
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"OPEXIA\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"piece_count\" and r._field == \"total\")\n  |> keep(columns: [\"_value\", \"_time\"])\n  |> last()",
          "queryType": "flux"
        }
      ]
    },
    {
      "id": 3,
      "title": "Heartbeat EDGE logical",
      "type": "stat",
      "datasource": {
        "type": "influxdb",
        "uid": "opexiaInflux"
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 30
              },
              {
                "color": "red",
                "value": 60
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"OPEXIA\")\n  |> range(start: -6h)\n  |> filter(fn: (r) => r._measurement == \"piece_count\" and r._field == \"value\")\n  |> keep(columns: [\"_time\", \"_value\"])\n  |> last()\n  |> map(fn: (r) => ({\n      r with\n      _field: \"seconds_since_last_msg\",\n      _value: float(v: uint(v: now()) - uint(v: r._time)) / 1000000000.0\n  }))",
          "queryType": "flux"
        }
      ]
    },
    {
      "id": 4,
      "title": "Estado Heartbeat",
      "type": "stat",
      "datasource": {
        "type": "influxdb",
        "uid": "opexiaInflux"
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "OK"
                },
                "1": {
                  "text": "ALERTA"
                }
              }
            }
          ],
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 0.5
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value_and_name"
      },
      "targets": [
        {
          "refId": "A",
          "query": "from(bucket: \"OPEXIA\")\n  |> range(start: -6h)\n  |> filter(fn: (r) => r._measurement == \"piece_count\" and r._field == \"value\")\n  |> keep(columns: [\"_time\", \"_value\"])\n  |> last()\n  |> map(fn: (r) => ({\n      r with\n      _field: \"heartbeat_status\",\n      _value: if float(v: uint(v: now()) - uint(v: r._time)) / 1000000000.0 < 60.0 then 0.0 else 1.0\n  }))",
          "queryType": "flux"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                60
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "datasourceId": 1,
              "model": {
                "refId": "A",
                "query": "from(bucket: \"OPEXIA\")\n  |> range(start: -6h)\n  |> filter(fn: (r) => r._measurement == \"piece_count\" and r._field == \"value\")\n  |> keep(columns: [\"_time\", \"_value\"])\n  |> last()\n  |> map(fn: (r) => ({\n      r with\n      _field: \"heartbeat_status\",\n      _value: if float(v: uint(v: now()) - uint(v: r._time)) / 1000000000.0 < 60.0 then 0.0 else 1.0\n  }))",
                "queryType": "flux"
              },
              "params": [
                "A",
                "10s",
                "now"
              ]
            },
            "reducer": {
              "type": "last"
            },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "frequency": "30s",
        "handler": 1,
        "name": "EDGE heartbeat > 60s",
        "noDataState": "alerting"
      }
    }
