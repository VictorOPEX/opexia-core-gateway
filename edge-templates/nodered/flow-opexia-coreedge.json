    {
        "id": "fn_store_token",
        "type": "function",
        "z": "flow-opexia-coreedge",
        "name": "Guardar token",
        "func": "// Obtiene el token de InfluxDB desde variable de entorno\nconst token = env.get('INFLUX_TOKEN');\nif (!token) {\n    node.warn('INFLUX_TOKEN no esta definido en el entorno');\n    return null;\n}\nflow.set('INFLUX_TOKEN', token);\nmsg.payload = 'INFLUX_TOKEN almacenado (flow context)';\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
