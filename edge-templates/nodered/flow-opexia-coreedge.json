    {
        "id": "fn_to_lp",
        "type": "function",
        "z": "flow-opexia-coreedge",
        "name": "a InfluxDB (Line Protocol)",
        "func": "// Convierte el mensaje a Line Protocol para InfluxDB v2\nconst parts = (msg.topic || '').split('/');\nconst SITE   = parts[1] || 'LAB';\nconst LAYER  = parts[2] || 'edge';\nconst ENTITY = parts[3] || 'ed-gate-zn1-01';\nconst CHAN   = parts[4] || 'tele';\nconst METRIC = parts[5] || 'piece_count';\n\nconst piece  = (msg.payload && msg.payload.piece != null) ? Number(msg.payload.piece) : Number(msg.payload);\nconst total  = (msg.payload && msg.payload.total != null) ? Number(msg.payload.total) : null;\nconst ts     = (msg.payload && msg.payload.ts) ? Number(msg.payload.ts) : Date.now();\n\nlet fields = `value=${piece}`;\nif (total !== null && !Number.isNaN(total)) fields += `,total=${total}`;\n\nconst t_ns = BigInt(ts) * 1000000n;\nconst lp = `${METRIC},site=${SITE},layer=${LAYER},entity=${ENTITY},channel=${CHAN} ${fields} ${t_ns}`;\n\nmsg.headers = {\n  Authorization: `Token ${flow.get('INFLUX_TOKEN') || ''}`,\n  'Content-Type': 'text/plain'\n};\nmsg.payload = lp;\nmsg.url = `http://influxdb:8086/api/v2/write?org=AlgorithmOps&bucket=OPEXIA&precision=ns`;\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 690,
        "y": 80,
        "wires": [
            [
                "http_write"
            ]
        ]
    },
