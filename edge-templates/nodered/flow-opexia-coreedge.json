    {
        "id": "fn_counter",
        "type": "function",
        "z": "flow-opexia-coreedge",
        "d": true,
        "name": "Acumular conteo pieza",
        "func": "// Acumula piezas en memoria (solo demo)\nlet total = flow.get('piece_total') || 0;\nconst inc = Number(msg.payload) || 0;\nif (inc > 0) total += inc;\nflow.set('piece_total', total);\n\n// Env\u00edo como JSON breve para debug y LP\nmsg.payload = { piece: inc, total: total, ts: Date.now() };\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 480,
        "y": 360,
        "wires": [
            [
                "mqtt_out_edge",
                "fn_to_lp",
                "dbg_core"
            ]
        ]
    },
